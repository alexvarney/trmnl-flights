<div class="layout layout--row layout--stretch">
  <div class="grid grid--cols-2">
    <div
      class="col col--start gap--medium"
      data-list-limit="true"
      data-list-max-height="330"
      data-list-hidden-count="true"
    >
      <span class="title title--small">Arrivals</span>
      {% for flight in arrivals %}
        <div class="item">
          <div class="meta"></div>
          <div class="content">
            <span class="title title--small">{{ flight.displayName }}</span>
            <span class="description">{{ flight.location }}</span>
            <div class="flex gap--small">
              <span class="label label--small label--underline">{{ flight.eta }}</span>
              <span class="label label--small label--underline">{{ flight.status }}</span>
              <span class="label label--small label--underline">{{ flight.aircraft }}</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div
      class="col col--start gap--medium"
      data-list-limit="true"
      data-list-max-height="330"
      data-list-hidden-count="true"
    >
      <span class="title title--small">Departures</span>
      {% for flight in departures %}
        <div class="item">
          <div class="meta"></div>
          <div class="content">
            <span class="title title--small">{{ flight.displayName }}</span>
            <span class="description">{{ flight.location }}</span>
            <div class="flex gap--small">
              <span class="label label--small label--underline">{{ flight.eta }}</span>
              <span class="label label--small label--underline">{{ flight.status }}</span>
              <span class="label label--small label--underline">{{ flight.aircraft }}</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="title_bar">
  <svg
    stroke="currentColor"
    fill="currentColor"
    stroke-width="0"
    viewBox="0 0 24 24"
    height="32px"
    width="32px"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M22 16v-2l-8.5-5V3.5c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5V9L2 14v2l8.5-2.5V19L8 20.5V22l4-1 4 1v-1.5L13.5 19v-5.5L22 16z"></path><path fill="none" d="M0 0h24v24H0V0z"></path>
  </svg>
  <span class="title">{{ airportCode }} Flights</span>
</div>
